@model Category

<form method="post">
    @*mt= margin top p= padding  pb=padding bottom*@
    <div class="border mt-4 p-3">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        @*Add validation error sumary at top*@
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            @*taking input and stored it in Name model class variable Name*@
            <input asp-for="Name" class="form-control" />
            @*Validation Error msg in dark red*@
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn-primary btn" style="width:150px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>

@*Client side validation
    Not refreshing page after entering values only page will refresh
    validations are in the script tag(refer shared->_ValidationScriptsPartial)
*@
@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

